<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sort_parent"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/ripple_effect"
    android:clickable="true"
    android:focusable="true"
    app:layout_constraintTop_toBottomOf="@id/image"
    tools:background="@color/backward_color">

    <ImageView
        android:id="@+id/sort_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sort_descending"
        app:tint="@color/FlatWhite" />

    <TextView
        android:id="@+id/sort_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="6dp"
        android:ellipsize="end"
        android:fontFamily="@font/helvetica"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="@string/sort_by_name_asc"
        android:textColor="@color/FlatWhite"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/sort_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/sort_image"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>